{
  "name": "tp-dacs-2022-be",
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "prestart": "npm run drop-sqlite-db || true",
    "start": "npm run nodemon",
    "poststart": "npm run create-sqlite-db",
    "dev": "cross-env NODE_ENV=development node --experimental-specifier-resolution=node --loader ts-node/esm ./api/api.ts",
    "nodemon": "nodemon --exec npm run dev",
    "create-sqlite-db": "shx touch ./db/database.sqlite",
    "drop-sqlite-db": "shx rm ./db/database.sqlite",
    "lint": "eslint ./api/. ./test/.",
    "prepush": "npm test",
    "pretest": "npm run lint",
    "production": "cross-env NODE_ENV=production node ./api/api.js",
    "test": "npm run create-sqlite-db; cross-env NODE_ENV=testing jest --coverage; npm run drop-sqlite-db",
    "test-ci": "jest --coverage --forceExit"
  },
  "jest": {
    "globals": {
      "__DEV__": true
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "dependencies": {
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "helmet": "^5.0.2",
    "jsonwebtoken": "^8.5.1",
    "sequelize": "^6.19.0",
    "sqlite3": "^5.0.6"
  },
  "devDependencies": {
    "@goldstack/nodemonx": "0.3.30",
    "@goldstack/utils-typescript-references": "0.1.10",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.0",
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.14.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^7.0.4",
    "jest": "^28.0.3",
    "nodemon": "^2.0.16",
    "shx": "^0.3.4",
    "supertest": "^6.2.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  }
}
